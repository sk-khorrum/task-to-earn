<body>
  <div class="slider">
    <div class="slides">
      <div class="slide"><img src="https://woodcommunication.vercel.app/toko.jpg" alt="ক্লায়েন্ট ১"></div>
      <div class="slide"><img src="https://woodcommunication.vercel.app/toko1.jpg" alt="ক্লায়েন্ট ২"></div>
      <div class="slide"><img src="https://woodcommunication.vercel.app/toko2.jpg" alt="ক্লায়েন্ট ৩"></div>
      <div class="slide"><img src="https://woodcommunication.vercel.app/toko3.jpg" alt="ক্লায়েন্ট ৪"></div>
    </div>
    <div class="navigation">
      <button class="prev" onclick="moveSlide(-1)">❮</button>
      <button class="next" onclick="moveSlide(1)">❯</button>
    </div>
    <div class="dots">
      <span class="dot" onclick="currentSlide(1)"></span>
      <span class="dot" onclick="currentSlide(2)"></span>
      <span class="dot" onclick="currentSlide(3)"></span>
      <span class="dot" onclick="currentSlide(4)"></span>
    </div>
  </div>

  <script>
    let slideIndex = 1;
    let autoSlideInterval;

    function showSlides(n) {
      let slides = document.getElementsByClassName("slide");
      let dots = document.getElementsByClassName("dot");
      if (n > slides.length) {slideIndex = 1}
      if (n < 1) {slideIndex = slides.length}
      for (let i = 0; i < slides.length; i++) {
        slides[i].style.display = "none";
      }
      for (let i = 0; i < dots.length; i++) {
        dots[i].className = dots[i].className.replace(" active", "");
      }
      slides[slideIndex-1].style.display = "block";
      dots[slideIndex-1].className += " active";
    }

    function moveSlide(n) {
      clearInterval(autoSlideInterval);
      showSlides(slideIndex += n);
      autoSlideInterval = setInterval(function() { moveSlide(1) }, 3000);
    }

    function currentSlide(n) {
      clearInterval(autoSlideInterval);
      showSlides(slideIndex = n);
      autoSlideInterval = setInterval(function() { moveSlide(1) }, 3000);
    }

    document.addEventListener("DOMContentLoaded", function() {
      showSlides(slideIndex);
      autoSlideInterval = setInterval(function() { moveSlide(1) }, 3000);
    });
  </script>
</body>
